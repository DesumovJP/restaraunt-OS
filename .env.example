# Restaurant OS Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=restaurant_db
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Strapi Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your_api_token_salt_here
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here

# Frontend Configuration
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_WS_URL=ws://localhost:1337/graphql

# Production URLs (for Docker/deployment)
# NEXT_PUBLIC_STRAPI_URL=https://api.your-domain.com
# NEXT_PUBLIC_STRAPI_WS_URL=wss://api.your-domain.com/graphql
